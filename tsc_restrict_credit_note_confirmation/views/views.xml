<odoo>
    <data>

        <record id="tsc_confirm_customer_credit_note_group" model="res.groups">
            <field name="name">Confirm customer credit note</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="comment">
                The user will be able to confirm customer credit notes
            </field>
        </record>

        <record id="tsc_custom_confirm" model="ir.ui.view">
            <field name="name">tsc_account.out.refund.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_post'][2]" position="replace">
                    <field name="tsc_check_user_group" invisible="1"/>
                    <button name="action_post" string="Confirm" class="oe_highlight"
                            type="object" groups="tsc_restrict_credit_note_confirmation.tsc_confirm_customer_credit_note_group" data-hotkey="v"
                            attrs="{'invisible': [('tsc_check_user_group', '=', True)]}"/>
                </xpath>
            </field>
        </record>
    </data>

</odoo>