<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
         <record id="tsc_internal_purchases_group" model="res.groups">
            <field name="name">Internal Purchases</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="comment">The user will only be able to create products in the expenses categories and see warehouses of internal use.</field>
        </record>

         <record id="tsc_merchandise_purchase_group" model="res.groups">
            <field name="name">Merchandise Purchases</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="comment">The user will only be able to create purchases and inventory operations related to locations of merchandise for sale.</field>
        </record> 

        <record id="tsc_internal_purchases_type_group_rule" model="ir.rule">
            <field name="name">Internal Purchases SPT Rule</field>
            <field name="model_id" ref="stock.model_stock_picking_type"/>
            <field name="groups" eval="[(6,0, [ref('tsc_internal_purchases_group')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[('tsc_picking_internal_use','=',True)]</field>
        </record>

        <record id="tsc_internal_purchases_group_rule" model="ir.rule">
            <field name="name">Internal Purchases SP Rule</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="groups" eval="[(6,0, [ref('tsc_internal_purchases_group')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[('picking_type_id.tsc_picking_internal_use','=',True)]</field>
        </record>

        <record id="tsc_merchandise_purchases_type_group_rule" model="ir.rule">
            <field name="name">Merchandise Purchases SPT Rule</field>
            <field name="model_id" ref="stock.model_stock_picking_type"/>
            <field name="groups" eval="[(6,0, [ref('tsc_merchandise_purchase_group')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[('tsc_picking_internal_use','=',False)]</field>
        </record>

        <record id="tsc_merchandise_purchases_group_rule" model="ir.rule">
            <field name="name">Merchandise Purchases SP Rule</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="groups" eval="[(6,0, [ref('tsc_merchandise_purchase_group')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[('picking_type_id.tsc_picking_internal_use','=',False)]</field>
        </record>

    </data>
</odoo>