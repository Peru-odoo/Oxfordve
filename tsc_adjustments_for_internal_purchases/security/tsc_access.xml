<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
         <record id="tsc_internal_purchases_group" model="res.groups">
            <field name="name">Internal Purchases</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="comment">The user will only be able to create products in the expenses categories and see warehouses of internal use.</field>
        </record>

         <record id="tsc_merchandise_purchase_group" model="res.groups">
            <field name="name">Merchandise Purchases</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="comment">The user will only be able to create purchases and inventory operations related to locations of merchandise for sale.</field>
        </record> 

    </data>
</odoo>