<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="tsc_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="mode">extension</field>
            <field name="priority" eval="17" />
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field 
                            name="is_shipped" 
                            string="Â¿Productos recibidos?" 
                            widget="boolean" 
                            attrs="{'invisible': [('state', '=', 'draft')]}"
                    />
                </xpath>
                
            </field>
        </record>

        <record id="tsc_purchase_order_view_tree_inherit" model="ir.ui.view">
            <field name="name">tsc.purchase.order.view.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="mode">extension</field>
            <field name="priority" eval="17" />
            <field name="inherit_id" ref="purchase.purchase_order_view_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_planned']" position="after">
                    <field 
                            name="is_shipped" 
                            string="Prod recibidos?" 
                            widget="boolean" 
                    />
                </xpath>              
            </field>
        </record>
        
        <record id="tsc_base_module_form_inherit" model="ir.ui.view">
            <field name="name">tsc.base.module.form.inherit</field>
            <field name="model">ir.module.module</field>
            <field name="mode">extension</field>
            <field name="priority" eval="17" />
            <field name="inherit_id" ref="base.module_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description_html']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>              
            </field>
        </record>

        <record id="tsc_purchase_order_view_search_inherit" model="ir.ui.view">
            <field name="name">tsc.purchase.order.view.search.inherit</field>
            <field name="model">purchase.order</field>
            <field name="mode">extension</field>
            <field name="priority" eval="17" />
            <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='order_date']" position="after">
                    <separator/>
                    <filter name="tsc_is_shipped_true" string="Productos recibidos" domain="[('is_shipped', '=', True)]"/>
                    <filter name="tsc_is_shipped_false" string="Productos por recibir" domain="[('is_shipped', '=', False)]"/>            
                    <separator/>
                </xpath>
            </field>
        </record>
        


        

    </data>
</odoo>